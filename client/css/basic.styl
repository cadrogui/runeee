/**
 * Basic app styles.
 */

html
  position relative
  min-height 100%

body
  height 100%
  font-family $fontBasic
  font-weight 400
  color $black
  background #f5f5f5
  font-size 14px
  text-rendering optimizelegibility
  -webkit-font-smoothing antialiased

::selection
  background $pink
  color #FFF

a
  color #e74c3c
  text-decoration none

strong
  font-weight 700

h2
  font-size 30px
  line-height 35px
  color #37474f
  margin 0
  font-family $fontExo
  font-weight 400

  &.margin-top
    margin-top 5px

  span.grey
    color #a1b1c2


h3
  font-size 25px
  line-height 30px
  color #37474f
  margin 0
  font-family $fontExo
  font-weight 400

  &.margin-top
    margin-top 50px

  &.margin-bottom
    margin-bottom 20px

p
  color #78909c

  &.no-margin
    margin 0

  &.margin-top
    margin-top 12px

  &.inline
    display inline

  &.dark
    color #37474f
    font-size 14px

  &.medium
    font-size 20px
    line-height 20px
    color #37474f
    margin 0

  &.big
    position relative
    font-size 30px
    line-height 39px
    color #37474f
    margin 0

    span
      font-size 19px
      vertical-align text-top

hr
  border none
  border-bottom 1px solid $border

.opacity-link
  display block
  transition opacity 150ms

  &:hover
    opacity .8 !important
