.button
  position relative
  display inline-block
  line-height 53px
  padding 0 25px
  text-align center
  border-radius 28px
  color #FFF
  transition color 100ms linear, background 100ms linear, opacity 100ms linear
  font-size 14px
  border none

  &:focus
    outline none

  &.small
    line-height 40px

  &.wider
    padding 0 35px

  &.ultra-wider
    padding 0 55px

  &.right
    float right
    margin-left 15px
    margin-top 5px

  &.no-margin-top
    margin-top 0

  &.show-on-hover
    opacity 0

  &.margin-top
    margin-top 20px

  &.margin-right-small
    margin-right 10px

  .fa
    position relative
    top 1px
    margin-left -10px
    margin-right 10px
    font-size 18px

  &.blue
    background $blue

    &.border
      border 1px solid $blue

    &:hover
      color $blue
      background transparent

    &.whiteBg:hover
      background #fff

  &.blue-inverse
    background transparent
    color $blue

    &.border
      border 1px solid $blue

    &:hover
      color #fff
      background $blue


  &.dark
    background $grey

    &.border
      border 1px solid $grey

    &:hover
      color $grey
      background #fff

  &.dark-inverse
    background transparent
    color $grey

    &.border
      border 1px solid #cfd8dc

    &:hover
      color $grey
      background #cfd8dc

  &.fb
    background $fb

    &.border
      border 1px solid $fb

    &:hover
      color $fb
      background #fff

  &.sidebar-dark
    background transparent
    color #78909c

    &.border
      border 1px solid #78909c

    &:hover
      color #fff
      background #78909c


  &.center
    display block
    margin 0 auto

  &.half
    width 50%

  &.soft-half
    min-width 50%
