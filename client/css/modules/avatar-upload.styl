.avatar-upload
  width 430px
  margin 0 auto

  p
    margin-top 0

  img
    float left
    width 120px
    height 120px
    border-radius 50%
    margin-right 35px


.avatar-upload__img-wrapper
  width 120px
  height 120px

.button
  position relative

  input
    z-index 1
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    opacity 0

    &:hover
      cursor pointer

    &:focus
      outline none
