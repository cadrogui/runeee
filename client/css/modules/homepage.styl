/**
 * Homepage
 */
.homepage
  background url('../img/hp_bg.png') top right
  background-size cover

  &.no-bg
    background #fff

  p
    color #252525

.homepage__header
  width 100%
  height 70px
  background #FFF
  background rgba(224, 224, 224, .5)

.homepage__logo
  position relative
  font-family $fontExo
  display block
  float left
  width 260px
  height 70px
  background $blue
  transition opacity 100ms ease-in
  color #FFF
  font-weight 700
  font-style italic
  font-size 21px

  .homepage__logo__img
    position relative
    top 23px
    left 65px
    width 125px
    height 25px

.homepage__login
  display block
  float right
  background $grey
  margin-top 8px
  margin-right 30px
  font-size 14px

.homepage__lang
  position relative
  display inline-block
  float right
  color $grey
  font-size 14px
  margin-top 25px
  margin-right 15px

.homepage h1
  font-family $fontExo
  color $blue
  font-size 60px
  line-height 62px
  font-weight 700
  font-style italic
  margin 18px 0

.homepage__text
  font-size 18px
  line-height 30px
  margin 0
  margin-bottom 30px
  max-width 650px
  font-family $fontExo

.homepage__footer
  position absolute
  bottom 10px
  width 100%
  font-size 12px

  a
    color $blue

.icon-404
  width 208px
  height 150px
  margin-top 60px
