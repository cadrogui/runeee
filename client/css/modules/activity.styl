.activity
  margin 20px 0

.activity-item
  position relative
  display block
  min-height 100px
  width 100%
  background #fff
  padding 23px 30px
  box-sizing border-box
  box-shadow 2px 2px 6px rgba(0, 0, 0, .15)
  margin-bottom 10px
  color #37474f
  transition box-shadow 200ms, background 200ms

  &:hover
    box-shadow 2px 2px 8px rgba(0, 0, 0, .2)
    background #fafafa

  &.training
    background url('../img/training-bg.png') no-repeat bottom right #fff
    background-size 590px 101px

  &.hr-5
    border-bottom 4px solid $hr5

  &.hr-4
    border-bottom 4px solid $hr4

  &.hr-3
    border-bottom 4px solid $hr3

  &.hr-2
    border-bottom 4px solid $hr2

  &.hr-1
    border-bottom 4px solid $hr1

  .competition-mark
    position absolute
    top 50%
    left -20px
    margin-top -20px
    width 40px
    height 40px
    background #f5f5f5
    border-radius 50%
    border-right 1px solid rgba(0, 0, 0, .2)

    img
      position relative
      top 13px
      left 13px
      width 16px
      height 16px

  .left-img
    float left
    width 53px
    height 53px
    margin-right 30px
    border-radius 2px

  .left
    float left
    width calc(100% - 350px - 90px)

    .title
      margin-top 6px
      display block
      //text-transform uppercase
      font-size 18px
      font-family $fontExo

    .sport-text
      font-size 14px
      color #78909c

  .right
    float right
    margin-top 10px
    width 350px
    text-align right

    span
      padding 0 15px

      span
        padding 0

      &:last-child
        padding 0

      .fa
        margin-right 5px

      &.limiter
        position relative
        top 7px
        display inline-block
        padding 0
        width 2px
        height 24px
        background #dbe1e8

.activity-img
  width 60px
  height 60px
  border-radius 2px
  margin 0 3px

.activity-icons
  position absolute
  z-index 2
  bottom -30px
  left 50%

  &.num-1
    width 68px
    margin-left -34px

  &.num-2
    width 134px
    margin-left -67px

  &.num-3
    width 200px
    margin-left -100px

.user-avatar
  width 45px
  height 45px
  border-radius 50%
  float left
  margin-right 15px

.activity-date
  margin-top 0

.component .activity-delete
  position absolute
  bottom 10px
  right 10px
  font-size 12px
