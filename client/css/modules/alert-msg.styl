.alert-msg
  z-index 10
  position fixed
  top 0
  left 0
  width 100%
  height 70px
  color #fff
  text-align center
  overflow hidden
  transform translateY(0px)
  transition transform 200ms cubic-bezier(0.835, 0, 0.19, 1)

  &.hide
    transform translateY(-70px)

  &:hover
    cursor pointer

    &:after
      opacity 1

  &:after
    content '\f057'
    position absolute
    top 25px
    right 55px
    font normal normal normal 14px/1 FontAwesome
    font-size 20px
    text-rendering auto
    -webkit-font-smoothing antialiased
    opacity .6
    transition opacity 200ms

  p
    font-family $fontExo
    font-weight 400
    font-style italic
    font-size 16px !important
    line-height 70px
    margin 0
    color #fff

    strong
      font-weight 700

  &.ko
    background $pink

  &.ok
    background $green
