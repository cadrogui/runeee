extends ../layout

block content
  form(action='/activity/#{activity._id}/edit' method='POST')
    div.component.fixed-header.border-bottom.no-margin
      div.row
        div.float-left
          h2.margin-top #{__('Edit activity')}
        button.button.blue.border.vertical-center.small.right.no-margin-top(type='submit') <i class="fa fa-check"></i> <strong>#{__('Save')}</strong> #{__('updated activity')}
    
    div.edit-row.margin-top-big
      div.container
        div.part-2.no-border
          h3 #{__('Title')}
          span.input.input--hoshi
            input.input__field.input__field--hoshi(type='text' name='static[title]' value=activity.title required)
            label.input__label.input__label--hoshi
              span.input__label-content.input__label-content--hoshi #{__('Activity title')}
                  
          h3.margin-top #{__('Sport')}
          div.select-menu
            select(name='static[sport]')
              each sport in sports
                if sport._id.toString() == activity.sport 
                  option(value='#{sport._id}' selected) #{sport.title} 
                else
                  option(value='#{sport._id}') #{sport.title}
            span.select-menu__top-label
  
  
        div.part-2.border-left.padding-bottom
          h3 #{__('Description')}
                        
          span.input.input--hoshi
            textarea.input__field.input__field--hoshi(rows='1' cols='40' name='static[description]') #{activity.description}
            label.input__label.input__label--hoshi
              span.input__label-content.input__label-content--hoshi #{__('Type here summary of your activity')}
                
          div.checkbox.margin-left.sports.clearfix.image-bg.image-public
            input(type="checkbox" name="static[isPublic]" value="true" checked=(true === activity.isPublic ? "checked" : undefined))
            label <span></span> 
              span.img
              p #{__('Public activity')}
                
                
          div.checkbox.margin-left.sports.clearfix.image-bg.image-competition
            input(type="checkbox" name="static[isCompetition]" value="true" checked=(true === activity.isCompetition ? "checked" : undefined))
            label <span></span> 
              span.img
              p #{__('Competition')}
              
 
    div.edit-row
      div.container
        div.part-2
          h3 #{__('Date')}
          span.input.input--hoshi
            input.input__field.input__field--hoshi(type='text' name='static[date]' value='#{date}')
            label.input__label.input__label--hoshi
              span.input__label-content.input__label-content--hoshi #{__('dd.mm.yy')}
                        
          h3.margin-top #{__('Time')}
          div.clearfix
            span.input.input--hoshi.half.left
              input.input__field.input__field--hoshi(type='text' name='static[time][hours]' value=time.hours)
              label.input__label.input__label--hoshi
                span.input__label-content.input__label-content--hoshi #{__('hh')}
                            
            span.input.input--hoshi.half.right
              input.input__field.input__field--hoshi(type='text' name='static[time][minutes]' value=time.minutes)
              label.input__label.input__label--hoshi
                span.input__label-content.input__label-content--hoshi #{__('mm')}

          h3.margin-top #{__('Duration')}
          div.clearfix
            span.input.input--hoshi.part-3
              input.input__field.input__field--hoshi(type='text' name='static[duration][hours]' value=activity.duration.hours)
              label.input__label.input__label--hoshi
                span.input__label-content.input__label-content--hoshi #{__('hh')}
                          
            span.input.input--hoshi.part-3
              input.input__field.input__field--hoshi(type='text' name='static[duration][minutes]' value=activity.duration.minutes)
              label.input__label.input__label--hoshi
                span.input__label-content.input__label-content--hoshi #{__('mm')}

            span.input.input--hoshi.part-3
              input.input__field.input__field--hoshi(type='text' name='static[duration][seconds]' value=activity.duration.seconds)
              label.input__label.input__label--hoshi
                span.input__label-content.input__label-content--hoshi #{__('ss')}             
        div.part-2
          h3 #{__('Distance')}
          div.clearfix
            span.input.input--hoshi
              input.input__field.input__field--hoshi(type='text' name='static[distance]' step='any' value=activity.distance)
              label.input__label.input__label--hoshi
                span.input__label-content.input__label-content--hoshi #{__('km')}
                        
          h3.margin-top #{__('Heart Rate')}
          div.clearfix
            span.input.input--hoshi.half.left
              input.input__field.input__field--hoshi(type='text' name='static[hr][avg]' value=activity.hr.avg)
              label.input__label.input__label--hoshi
                span.input__label-content.input__label-content--hoshi #{__('avg (bpm)')}
                          
            span.input.input--hoshi.half.right
              input.input__field.input__field--hoshi(type='text' name='static[hr][max]' value=activity.hr.max)
              label.input__label.input__label--hoshi
                span.input__label-content.input__label-content--hoshi #{__('max (bpm)')}
                        
          h3.margin-top #{__('Speed')}
          div.clearfix
            span.input.input--hoshi.half.left
              input.input__field.input__field--hoshi(type='text' name='static[speed][avg]' value=activity.speed.avg)
              label.input__label.input__label--hoshi
                span.input__label-content.input__label-content--hoshi #{__('avg (km/h)')}
                                
            span.input.input--hoshi.half.right
              input.input__field.input__field--hoshi(type='text' name='static[speed][max]' value=activity.speed.max)
              label.input__label.input__label--hoshi
                span.input__label-content.input__label-content--hoshi #{__('max (km/h)')}               
