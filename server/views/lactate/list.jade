    div.row
      div.float-left
        h2 #{title} 
  if lactates.length > 0
    div.activity.component.no-margin-top
      each lactate in lactates
        a.activity-item(href="/lactate-test/#{lactate._id}") 
          strong Zobrazenie zatial len dev nepremyslene
          br
          span DÃ¡tum: #{lactate.date}
          br
          span 4x #{lactate.intervalDistance}m
          
  else
    div.component
      div.component.no-padding.empty.with-icon.bg-test
        div.component.white.margin-top
          div.row
            img(src='/build/img/icons/no-test.png' width='171' height='146')
            h2 #{__('No Lactate test!')}
